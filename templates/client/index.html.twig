{% extends 'base.html.twig' %}

{% block title %}Clients - Backoffice
{% endblock %}

{% block body %}
	<div class="space-y-6">
		<div class="flex items-center justify-between">
			<div>
				<h1 class="text-3xl font-bold text-white">Clients</h1>
				<p class="text-gray-400 mt-1">GÃ©rez les clients</p>
			</div>
			<a href="{{ path('app_client_new') }}" class="inline-flex items-center gap-2 px-5 py-2.5 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-medium rounded-lg hover:from-indigo-500 hover:to-purple-500 transition-all duration-200">
				<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
				</svg>
				Nouveau client
			</a>
		</div>

		<div class="bg-gray-800/50 rounded-xl border border-gray-700/50 overflow-hidden">
			<table class="w-full">
				<thead>
					<tr class="border-b border-gray-700/50">
						<th class="text-left px-6 py-4 text-xs font-semibold text-gray-400 uppercase">Client</th>
						<th class="text-left px-6 py-4 text-xs font-semibold text-gray-400 uppercase">Contact</th>
						<th class="text-left px-6 py-4 text-xs font-semibold text-gray-400 uppercase">Date</th>
						<th class="text-right px-6 py-4 text-xs font-semibold text-gray-400 uppercase">Actions</th>
					</tr>
				</thead>
				<tbody class="divide-y divide-gray-700/50">
					{% for client in clients %}
						<tr class="hover:bg-gray-700/30">
							<td class="px-6 py-4">
								<div class="flex items-center gap-3">
									<div class="w-10 h-10 rounded-full bg-gradient-to-br from-emerald-500 to-teal-600 flex items-center justify-center text-white font-semibold">
										{{ client.firstname|first|upper }}{{ client.lastname|first|upper }}
									</div>
									<div>
										<p class="font-medium text-white">{{ client.firstname }}
											{{ client.lastname }}</p>
										<p class="text-sm text-gray-400">{{ client.address|slice(0, 30) }}...</p>
									</div>
								</div>
							</td>
							<td class="px-6 py-4">
								<p class="text-gray-300">{{ client.email }}</p>
								<p class="text-sm text-gray-400">{{ client.phoneNumber }}</p>
							</td>
							<td class="px-6 py-4 text-gray-400">{{ client.createdAt|date('d/m/Y') }}</td>
							<td class="px-6 py-4">
								<div class="flex items-center justify-end gap-2">
									<a href="{{ path('app_client_edit', {id: client.id}) }}" class="p-2 text-gray-400 hover:text-indigo-400 hover:bg-indigo-500/10 rounded-lg">
										<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
										</svg>
									</a>
									<form action="{{ path('app_client_delete', {id: client.id}) }}" method="post" onsubmit="return confirm('Supprimer ce client ?');">
										<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
										<button type="submit" class="p-2 text-gray-400 hover:text-red-400 hover:bg-red-500/10 rounded-lg">
											<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
											</svg>
										</button>
									</form>
								</div>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4" class="px-6 py-12 text-center text-gray-400">Aucun client</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
