{% extends 'base.html.twig' %}

{% block title %}
	{{ isEdit|default(false) ? 'Modifier' : 'Créer' }}
	un produit
{% endblock %}

{% block body %}
	<div class="max-w-2xl mx-auto space-y-6">
		<div class="flex items-center gap-4">
			<a href="{{ path('app_product_index') }}" class="p-2 text-gray-400 hover:text-white hover:bg-gray-700 rounded-lg">
				<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
				</svg>
			</a>
			<div>
				<h1 class="text-3xl font-bold text-white">{{ isEdit|default(false) ? 'Modifier' : 'Créer' }}
					un produit</h1>
				<p class="text-gray-400 mt-1">{{ stepTitle }}</p>
			</div>
		</div>

		<div class="bg-gray-800/50 rounded-xl border border-gray-700/50 p-6">
			<div class="flex items-center justify-between mb-4">
				<span class="text-sm text-gray-400">Étape
					{{ currentStep }}/{{ totalSteps }}</span>
				<span class="text-sm text-indigo-400">{{ ((currentStep / totalSteps) * 100)|round }}%</span>
			</div>
			<div class="w-full bg-gray-700 rounded-full h-2.5">
				<div class="bg-gradient-to-r from-indigo-600 to-purple-600 h-2.5 rounded-full" style="width: {{ (currentStep / totalSteps) * 100 }}%"></div>
			</div>
			<div class="flex justify-between mt-4">
				{% for i in 1..totalSteps %}
					<div class="flex flex-col items-center">
						<div class="w-8 h-8 rounded-full flex items-center justify-center text-sm font-semibold {{ i <= currentStep ? 'bg-indigo-600 text-white' : 'bg-gray-700 text-gray-400' }}">{{ i }}</div>
					</div>
				{% endfor %}
			</div>
		</div>

		<div class="bg-gray-800/50 rounded-xl border border-gray-700/50 p-6">
			{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

			{% for field in form %}
				{% if field.vars.name != '_token' %}
					<div>
						<label class="block text-sm font-medium text-gray-300 mb-2">{{ field.vars.label }}</label>
						{{ form_widget(field, {'attr': {'class': 'w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-indigo-500'}}) }}
						{{ form_errors(field) }}
					</div>
				{% endif %}
			{% endfor %}

			<div class="flex items-center justify-between pt-6 border-t border-gray-700">
				{% if not isFirstStep %}
					<button type="submit" name="previous" class="px-5 py-2.5 text-gray-400 bg-gray-700/50 hover:bg-gray-700 rounded-lg">Précédent</button>
				{% else %}
					<div></div>
				{% endif %}

				<button type="submit" class="px-6 py-2.5 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-medium rounded-lg hover:from-indigo-500 hover:to-purple-500">
					{{ isLastStep ? (isEdit|default(false) ? 'Enregistrer' : 'Créer') : 'Suivant' }}
				</button>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
