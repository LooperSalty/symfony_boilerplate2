{% extends 'base.html.twig' %}

{% block title %}
	{{ is_edit ? 'Modifier' : 'Créer' }}
	un utilisateur - Backoffice
{% endblock %}

{% block body %}
	<div
		class="max-w-2xl mx-auto space-y-6">
		<!-- Header -->
		<div class="flex items-center gap-4">
			<a href="{{ path('app_user_index') }}" class="p-2 text-gray-400 hover:text-white hover:bg-gray-700 rounded-lg transition-all duration-200">
				<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
				</svg>
			</a>
			<div>
				<h1 class="text-3xl font-bold text-white">{{ is_edit ? 'Modifier' : 'Créer' }}
					un utilisateur</h1>
				<p class="text-gray-400 mt-1">{{ is_edit ? 'Modifiez les informations de l\'utilisateur' : 'Remplissez les informations du nouvel utilisateur' }}</p>
        </div>
    </div>

    <!-- Form Card -->
    <div class="bg-gray-800/50 backdrop-blur-xl rounded-xl border border-gray-700/50 p-6">
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Firstname -->
            <div>
                <label for="{{ form.firstname.vars.id }}" class="block text-sm font-medium text-gray-300 mb-2">
                    {{ form_label(form.firstname) }}
                </label>
                {{ form_widget(form.firstname, {'attr': {'class': 'w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200'}}) }}
                {{ form_errors(form.firstname) }}
            </div>

            <!-- Lastname -->
            <div>
                <label for="{{ form.lastname.vars.id }}" class="block text-sm font-medium text-gray-300 mb-2">
                    {{ form_label(form.lastname) }}
                </label>
                {{ form_widget(form.lastname, {'attr': {'class': 'w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200'}}) }}
                {{ form_errors(form.lastname) }}
            </div>
        </div>

        <!-- Email -->
        <div>
            <label for="{{ form.email.vars.id }}" class="block text-sm font-medium text-gray-300 mb-2">
                {{ form_label(form.email) }}
            </label>
            {{ form_widget(form.email, {'attr': {'class': 'w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200'}}) }}
            {{ form_errors(form.email) }}
        </div>

        <!-- Roles -->
        <div>
            <label for="{{ form.roles.vars.id }}" class="block text-sm font-medium text-gray-300 mb-2">
                {{ form_label(form.roles) }}
            </label>
            {{ form_widget(form.roles, {'attr': {'class': 'w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200'}}) }}
            {{ form_errors(form.roles) }}
            <p class="mt-1 text-sm text-gray-400">Maintenez Ctrl pour sélectionner plusieurs rôles</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Password -->
            <div>
                <label for="{{ form.plainPassword.first.vars.id }}" class="block text-sm font-medium text-gray-300 mb-2">
                    {{ form_label(form.plainPassword.first) }}
                </label>
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200'}}) }}
                {{ form_errors(form.plainPassword.first) }}
            </div>

            <!-- Confirm Password -->
            <div>
                <label for="{{ form.plainPassword.second.vars.id }}" class="block text-sm font-medium text-gray-300 mb-2">
                    {{ form_label(form.plainPassword.second) }}
                </label>
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200'}}) }}
                {{ form_errors(form.plainPassword.second) }}
            </div>
        </div>

        {{ form_errors(form.plainPassword) }}

        <!-- Submit -->
        <div class="flex items-center gap-4 pt-4">
            <button type="submit" 
                    class="px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-medium rounded-lg hover:from-indigo-500 hover:to-purple-500 transition-all duration-200 transform hover:scale-105">
                {{ is_edit ? 'Enregistrer les modifications' : 'Créer l\'utilisateur' }}</p>
			</button>
			<a href="{{ path('app_user_index') }}" class="px-6 py-3 text-gray-400 hover:text-white transition-colors duration-200">
				Annuler
			</a>
		</div>

		{{ form_end(form) }}
	</div>
</div>{% endblock %}
